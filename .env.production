# ============================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ============================================
# Copy this to .env and fill in all values before deploying
# DO NOT commit .env to version control!

# ============================================
# CRITICAL: Update ALL values below for production
# ============================================

# Project Configuration
PROJECT_NAME=losricostacos
WEBSITE_DOMAIN=losricostacos.com
COMPOSE_PROJECT_NAME=losricostacos
NETWORK_NAME=losricostacos_network

# ============================================
# Security (MUST CHANGE)
# ============================================
# Generate JWT secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_ME_GENERATE_NEW_64_CHAR_HEX
JWT_EXPIRE=30d

# ============================================
# Database (MUST CHANGE)
# ============================================
POSTGRES_VERSION=16-alpine
POSTGRES_USER=losricostacos_user
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
POSTGRES_DB=losricostacos_db
POSTGRES_PORT=5432
POSTGRES_HOST_PORT=5432

# Backend database connection
DB_HOST=postgres
DB_PORT=5432
DB_NAME=losricostacos_db
DB_USER=losricostacos_user
DB_PASSWORD=CHANGE_ME_SAME_AS_POSTGRES_PASSWORD

# ============================================
# Email Service (REQUIRED - Choose one)
# ============================================
# Option 1: Gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=CHANGE_ME_GMAIL_APP_PASSWORD
EMAIL_FROM=Los Ricos Tacos <your_email@gmail.com>

# Option 2: SendGrid (uncomment if using)
# SENDGRID_API_KEY=CHANGE_ME_SENDGRID_KEY
# EMAIL_FROM=Los Ricos Tacos <noreply@losricostacos.com>

# ============================================
# Payment Processing (Stripe)
# ============================================
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_CHANGE_ME_YOUR_STRIPE_SECRET_KEY
STRIPE_PUBLISHABLE_KEY=pk_live_CHANGE_ME_YOUR_STRIPE_PUBLISHABLE_KEY

# ============================================
# Google Maps API (for delivery validation)
# ============================================
# Get from: https://console.cloud.google.com/apis/credentials
REACT_APP_GOOGLE_MAPS_API_KEY=CHANGE_ME_YOUR_GOOGLE_MAPS_API_KEY

# ============================================
# Frontend Configuration
# ============================================
REACT_APP_NODE_VERSION=18-alpine
REACT_APP_PORT=3000
REACT_APP_HOST_PORT=3000
REACT_APP_API_URL=/api

# ============================================
# Backend API Configuration
# ============================================
BACKEND_NODE_VERSION=18-alpine
BACKEND_PORT=5000
NODE_ENV=production
FRONTEND_URL=https://losricostacos.com

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# Nginx Configuration
# ============================================
NGINX_VERSION=1.25-alpine
NGINX_PORT=80
NGINX_HOST_PORT=8080
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024

# ============================================
# Traefik Configuration (SSL/HTTPS)
# ============================================
TRAEFIK_VERSION=latest
TRAEFIK_PORT=80
TRAEFIK_HOST_PORT=8081
TRAEFIK_API_PORT=8082
TRAEFIK_API_ENTRYPOINT=traefik
TRAEFIK_LOG_LEVEL=INFO
TRAEFIK_DOCKER_NETWORK=losricostacos_network
TRAEFIK_WEBSITE_DOMAIN=losricostacos.com
TRAEFIK_CERT_EMAIL=CHANGE_ME_YOUR_EMAIL_FOR_SSL_NOTIFICATIONS
TRAEFIK_EXPOSED_BY_DEFAULT=false

# ============================================
# pgAdmin Configuration
# ============================================
PGADMIN_VERSION=latest
PGADMIN_DEFAULT_EMAIL=CHANGE_ME_ADMIN_EMAIL
PGADMIN_DEFAULT_PASSWORD=CHANGE_ME_STRONG_PASSWORD
PGADMIN_PORT=80
PGADMIN_HOST_PORT=5050
PGADMIN_CONFIG_SERVER_MODE=True

# ============================================
# Digital Ocean Deployment (if using)
# ============================================
DO_API_TOKEN=CHANGE_ME_YOUR_DO_API_TOKEN
DO_API_REGION=nyc3
DO_API_IMAGE=ubuntu-22-04-x64
DO_APP_NAME=losricostacos
DEPLOY_PATH=/opt/apps/losricostacos
